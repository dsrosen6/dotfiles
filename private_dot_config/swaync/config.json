{
    "$schema": "/etc/xdg/swaync/configSchema.json",
    "positionX": "right",
    "positionY": "top",
    "layer": "overlay",
    "control-center-layer": "top",
    "layer-shell": true,
    "cssPriority": "application",
    "control-center-width": 500,
    "control-center-margin-top": 6,
    "control-center-margin-bottom": 6,
    "control-center-margin-right": 4,
    "control-center-margin-left": 0,
    "notification-2fa-action": true,
    "notification-inline-replies": false,
    "notification-window-width": 380,
    "notification-icon-size": 48,
    "notification-body-image-height": 240,
    "notification-body-image-width": 240,
    "timeout": 8,
    "timeout-low": 4,
    "timeout-critical": 0,
    "fit-to-screen": true,
    "keyboard-shortcuts": true,
    "image-visibility": "when-available",
    "transition-time": 150,
    "hide-on-clear": true,
    "hide-on-action": true,
    "script-fail-notify": true,
    "widgets": [
        "buttons-grid",
        "notifications",
        "mpris",
        "volume",
        "backlight"
    ],
    "widget-config": {
        "mpris": {
            "image-size": 80,
            "image-radius": 10
        },
        "volume": {
            "label": ""
        },
        "backlight": {
            "label": "󰃞",
            "min": 10
        },
        "buttons-grid": {
            "actions": [
                {
                    "label": "",
                    "command": "kitty nmtui",
                    "tooltip": "Network Settings"
                },
                {
                    "label": "",
                    "command": "sh -c 'swaync-client -t && blueman-manager'",
                    "tooltip": "Bluetooth Menu"
                },
                {
                    "label": "󰂛",
                    "command": "swaync-client -d",
                    "type": "toggle",
                    "tooltip": "DND"
                },
                {
                    "label": "",
                    "command": "sh -c 'swaync-client -t && hyprlock'",
                    "tooltip": "Lock"
                },
                {
                    "label": "󰗽",
                    "command": "sh -c 'swaync-client -t && ~/.config/rofi/prompts/logout'",
                    "tooltip": "Log Out"
                },
                {
                    "label": "",
                    "command": "sh -c 'swaync-client -t && ~/.config/rofi/prompts/shutdown'",
                    "tooltip": "Power Off"
                },
                {
                    "label": "",
                    "command": "sh -c 'swaync-client -t && ~/.config/rofi/prompts/reboot'",
                    "tooltip": "Reboot"
                }
            ]
        }
    }
}
